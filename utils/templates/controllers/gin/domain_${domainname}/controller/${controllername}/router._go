package {{LowerCase .ControllerName}}

import (
	"net/http"

	"github.com/gin-gonic/gin"

    "{{.PackagePath}}/shared/infrastructure/config"
	"{{.PackagePath}}/shared/infrastructure/logger" {{range .UsecaseNames}}
    "{{$.PackagePath}}/domain_{{$.DomainName}}/usecase/{{LowerCase .}}" {{end}}
)

type Controller struct {
	Router gin.IRouter
	Config *config.Config
    Log    logger.Logger {{range .UsecaseNames}}
    {{PascalCase .}}Inport {{LowerCase .}}.Inport {{end}}
}

// RegisterRouter registering all the router
func (r *Controller) RegisterRouter() { {{range .UsecaseNames}}
    r.Router.POST("/{{LowerCase .}}", r.authorized(), r.{{CamelCase .}}Handler(r.{{PascalCase .}}Inport)) {{end}}
}
