package main

import (
    "flag"
    "fmt"
    "{{.PackagePath}}/domain_{{.DomainName}}/application"
    "{{.PackagePath}}/shared/driver"
)

func main() {

	appMap := map[string]func() driver.RegistryContract{
		"app{{LowerCase .EntityName}}": application.NewApp{{PascalCase .EntityName}}(),
	}

	flag.Parse()

	app, exist := appMap[flag.Arg(0)]
	if exist {
		driver.Run(app())
	} else {
		fmt.Println("You may try 'go run main.go <app_name>' :")
		for appName := range appMap {
			fmt.Printf(" - %s\n", appName)
		}
	}

}
